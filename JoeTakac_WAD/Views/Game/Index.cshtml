@model IEnumerable<JoeTakac_WAD.Models.Game>


<div class="container p-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Games List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Game" asp-action="Create" class="btn btn-primary">Create New Game</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Developer
                    </th>
                    <th>
                        Publisher
                    </th>
                    <th>
                        Release Date
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Engine
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Platforms
                    </th>
                    <th>
                        System Requirements
                    </th>
                    <th>
                        Box Art
                    </th>
                    <th>Details</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.Developer</td>
                        <td>@obj.Publisher</td>
                        <td>@obj.ReleaseDate</td>
                        <td>@obj.Genre</td>
                        <td>@obj.Engine</td>
                        <td>@obj.Rating</td>
                        <td>@obj.Platforms</td>
                        <td width="30%">@obj.Requirements</td>
                        <td><img src="~/img/@obj.Image" width="200" height="300" /></td>
                        <td class="text-left">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Game" asp-route-Id="@obj.GameID" asp-action="GameDetails" class="btn btn-info mx-2">Details</a>
                            </div>
                        </td>
                        <td class="text-left">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Game" asp-route-Id="@obj.GameID" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Game" asp-route-Id="@obj.GameID" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Games Exist.</p>
    }
</div>



