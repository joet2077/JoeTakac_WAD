<section class="noflex">
    <form asp-action="Search" method="get">
        <h1>Search</h1>
        <div>

            <label for="SearchString">Search by Title: </label> <input type="text" name="SearchString" id="SearchString" />

            <input type="submit" value="Filter" />

        </div>

    </form>

    <div>

        @if (ViewData["SearchString"] != null && (string)ViewData["SearchString"] != String.Empty)

        {

            @foreach (var item in Model)

            {
                <p><a asp-controller="Game" asp-action="GameDetails" asp-route-id="@item.GameID">@item.Title</a></p>
            }


            if (Model.Count == 0)


            {

                <p>Sorry no matches.</p>

            }

        }

    </div>

</section>



